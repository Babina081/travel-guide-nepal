<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:elevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:id="@+id/cardViewrecent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageholderrecent"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:src="@drawable/slide6"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/row_recent_place_name"
            android:layout_centerInParent="true"
            android:textColor="@color/SorrellBrown"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"

            >

            <Button
                android:id="@+id/btnIsLikedrecent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/favorite_white"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="10"
                android:id="@+id/likerecent"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>