<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    tools:context=".activities.loginregistrationactivities.NewActivity">


    <TextView
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Travel Guide Nepal"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/navy"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="150dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore every famous places of beautiful country Nepal."
      android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
    />

    <Button
        android:id="@+id/btnloginwithemail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Continue with Email"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/email"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/bg_email"
        android:drawableTint="@color/black"
        />

    <Button
        android:id="@+id/btnloginwithgoogle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Continue with Google"
        android:drawableLeft="@drawable/google"
        android:drawableTint="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_google"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/btnloginwithfb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Contibue with Facebook"
        android:drawableLeft="@drawable/fb"
        android:drawableTint="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_facebook"
        android:textStyle="bold"
        android:textSize="18sp"
        />



</LinearLayout>

