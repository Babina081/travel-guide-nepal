<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.loginregistrationactivities.forgetpassword.ForgetPassword">

    <ImageView
        android:id="@+id/backtologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:src="@drawable/backtwin"
        android:layout_margin="10dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/password_twine"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:fontFamily="@font/raleway_bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Password"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:fontFamily="@font/raleway_bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Provide your account's email for which you want to reset your password! "
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>





    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_google"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/forgetPwEditText"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:text="Next"
        android:id="@+id/btnchangepw_step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/SorrellBrown"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_email"
        android:elevation="20dp"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>
    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/navy"/>

    <TextView
        android:layout_marginTop="10dp"
        android:onClick="send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify via Message"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>

</LinearLayout>