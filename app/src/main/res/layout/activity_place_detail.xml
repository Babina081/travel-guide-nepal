<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.homePageActivities.PlaceDetailActivity"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/placeimage"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:adjustViewBounds="true" />
    <Button
        android:id="@+id/btnlikeunlike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/favorite_white"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/placename"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="Place Name"
            android:textSize="30sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            />

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="@color/navy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/likeText"
                android:text="0"
                android:layout_marginLeft="2dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" People like this"
                android:textColor="@color/COLOR4"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comment"
                android:textColor="@color/COLOR4"
                android:text="16"
                android:layout_marginLeft="30dp"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/placedescription"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Here is the description of the place"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/placelocation"
            android:drawableLeft="@drawable/location"
            android:layout_marginTop="10dp"
            android:text="Place Location"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To Dos"
            android:textColor="@color/SantaFe"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="@color/navy" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="horizontal">

    <Button
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_google"
        android:text="Navigate"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/navy"
        android:id="@+id/btnNavigate"
        android:layout_margin="10dp"
        android:elevation="10dp"
      />

    <Button
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_google"
        android:text="User Review"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/Twine"
        android:layout_margin="10dp"

        android:elevation="10dp"
        android:id="@+id/btnReview"/>

</LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Comments"
            android:textColor="@color/SantaFe"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="@color/navy" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvComments"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:id="@+id/txtComment"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_button_border"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btnAddComment"
                android:src="@drawable/ic_baseline_send_24"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

</RelativeLayout>